 * You should have received a copy of the GNU General Public License along with
 * this program; if not, write to the Free Software Foundation, Inc., 59 Temple
 * Place, Suite 330, Boston, MA 02111-1307  USA
 * 
 * $Id: accept.php,v 1.2 2005/02/07 18:49:28 at Exp $
 */

if ($object->getStatus() == $cfg['status_id']['submitted']
    && isset($_POST['submitted']))
{
    # Update the submission to "paid" status
    $object->setStatus($cfg['status_id']['paid']);
    $object->update();

    # Add transactions to record that the expenses were reimbursed.
    if (isset($_POST['expense']) && is_array($_POST['expense'])) {
        foreach ($_POST['expense'] as $exp) {
            $cmd =& $obj['conn']->createCommand();
            $cmd->loadQuery("sql/queries/expense_submission/accept.sql");
            $cmd->addParameter("member", $cfg['user']);
            $cmd->addParameter("expense", $exp);
            $cmd->addParameter("from", $cfg['studco_uid']);
            $cmd->addParameter("to", $cfg['root_uid']);
            $cmd->executeNonQuery();
        }
    }
}

if ($object->getStatus() != $cfg['status_id']['submitted']
    || isset($_POST['submitted']))
{
    redirect("$cfg[base_url]/members/expense_submission/read/$cfg[object]");
}

# If we didn't get redirected, we need to display some info about the expenses
$template = file_get_contents("templates/expense_submission/accept.php");

$cmd =& $obj['conn']->createCommand();
$cmd->loadQuery("sql/queries/expense_submission/select-expenses.sql");
$cmd->addParameter("submission", $cfg['object']);
$result =& $cmd->executeReader();
if ($result->numRows()) {
    $template = Template::unhide($template, "some");
    while ($row =& $result->fetchRow()) {
        $template = Template::block($template, "expense", $row);
    }
    # Add total
    $cmd =& $obj['conn']->createCommand();
    $cmd->loadQuery("sql/queries/expense_submission/select-total.sql");
    $cmd->addParameter("submission", $cfg['object']);
    $total = $cmd->executeScalar();
    $template = Template::replace($template, array("total" => $total));
}
else {
    $template = Template::unhide($template, "none");
}

$res['title'] = "Mark Expenses as Reimbursed";
$res['content'] = $template;

?>
