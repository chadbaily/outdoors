<form name="theform" id="the-form" method="POST">
    <input type="hidden" name="form-name" id="form-name" value="1" />

<config
    hidden="1"
    id="config"
    sanity-check="form-name"
    form-id="the-form">
    <element
        name="emailAddress"
        data-type="email"
        required="1"
        element-id="emailAddress" />
</config>

<table>
  <tr hidden="1" id="emailAddress-error">
    <td colspan="2" class="error">You must enter a valid email address.</td>
  </tr>
  <tr>
    <td>Email Address</td>
    <td><input type="text" name="emailAddress" id="emailAddress" /></td>
  </tr>
  <tr>
    <td colspan="2" align="right">
    <input type="submit" value="Send my password!" />
    </td>
  </tr>
</table>
</form>
