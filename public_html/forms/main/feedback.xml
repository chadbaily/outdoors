<form name="theform" id="the-form" method="POST">
    <input type="hidden" name="form-name" id="form-name" value="1" />

<config
    hidden="1"
    id="config"
    sanity-check="form-name"
    form-id="the-form">
    <element
        name="subject"
        element-id="subject" />
    <element
        name="message"
        element-id="message" />
</config>

<table width="100%">
  <tr>
    <td>Subject</td>
    <td><input type="text" style="width:100%" name="subject" id="subject" /></td>
  </tr>
  <tr>
    <td>Message</td>
    <td>
      <textarea cols="40" style="width:100%" rows="10" name="message" id="message">
      Remember: if you want a reply, YOU NEED TO TELL US WHO YOU ARE.
      </textarea>
    </td>
  </tr>
  <tr>
    <td colspan="2" align="right">
    <input type="submit" value="Send Feedback" />
    </td>
  </tr>
</table>
</form>
